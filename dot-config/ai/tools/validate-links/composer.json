{
    "name": "s-a-c/validate-links",
    "description": "Comprehensive PHP Link Validation and Remediation Tools - Validate and automatically fix broken links in documentation",
    "type": "library",
    "keywords": [
        "link-validation",
        "documentation",
        "markdown",
        "html",
        "broken-links",
        "link-checker",
        "link-fixer",
        "documentation-tools",
        "ci-cd",
        "quality-assurance"
    ],
    "homepage": "https://github.com/s-a-c/validate-links",
    "license": "MIT",
    "authors": [
        {
            "name": "StandAloneComplex",
            "email": "71233932+s-a-c@users.noreply.github.com",
            "homepage": "https://github.com/s-a-c",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-coverage": "^2.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SAC\\ValidateLinks\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SAC\\ValidateLinks\\Tests\\": "tests/"
        }
    },
    "bin": [
        "validate-links"
    ],
    "scripts": {
        "test": "pest",
        "test:unit": "pest tests/Unit/",
        "test:integration": "pest tests/Integration/",
        "test:configuration": "pest tests/Configuration/",
        "test:performance": "pest tests/Performance/",
        "test:coverage": "pest --coverage --coverage-html=coverage-html",
        "test:filter": "pest --filter",
        "test:verbose": "pest --verbose",
        "analyse": "phpstan analyse src/ --level=8",
        "cs-fix": "php-cs-fixer fix src/",
        "cs-check": "php-cs-fixer fix src/ --dry-run --diff",
        "quality": [
            "@cs-check",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/s-a-c/validate-links/issues",
        "source": "https://github.com/s-a-c/validate-links",
        "docs": "https://github.com/s-a-c/validate-links/blob/main/README.md"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
