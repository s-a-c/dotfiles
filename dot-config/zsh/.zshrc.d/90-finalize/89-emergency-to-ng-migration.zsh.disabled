            "disabled") status_icon="‚úÖ" ;;
            "restored") status_icon="üîÑ" ;;
            "disable_failed") status_icon="‚ùå" ;;
        esac

        echo "  $status_icon $category: $status"
    done
    echo

    if [[ "${#_NG_MIGRATION_STEPS_COMPLETED[@]}" -gt 0 ]]; then
        echo "‚úÖ Completed Migration Steps:"
        for step in "${_NG_MIGRATION_STEPS_COMPLETED[@]}"; do
            echo "  ‚Ä¢ $step"
        done
        echo
    fi

    echo "üí° Available Commands:"
    echo "  ‚Ä¢ ng_migration_status       - View current migration status"
    echo "  ‚Ä¢ ng_migration_rollback <category> - Rollback specific emergency fixes"
    echo "  ‚Ä¢ ng_migration_complete     - Execute complete migration"
    echo

    return 0
}

# Migration rollback utility
ng_migration_rollback() {
    local category="${1:-all}"

    echo "üîÑ .NG Emergency Fixes Migration - Rollback"
    echo "==========================================="
    echo

    echo "Rolling back emergency fixes for: $category"
    echo

    restore_emergency_fixes "$category"

    echo
    echo "Rollback complete for: $category"
    echo "‚ö†Ô∏è  Restart your shell to apply the rollback"

    return 0
}

# Migration completion utility
ng_migration_complete() {
    execute_complete_migration
}

