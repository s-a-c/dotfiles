# Smart directory creation
mkcd() {
    [[ $# -eq 1 ]] && mkdir -p "$1" && cd "$1" || {
        echo "Usage: mkcd <directory>" >&2
        return 1
    }
}

# Safe file operations
backup_file() {
    local file="$1"
    [[ -f "$file" ]] && cp "$file" "${file}.backup.$(date +%Y%m%d_%H%M%S)"
}

